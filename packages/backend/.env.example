# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=service_desk

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=7d

# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Email to Ticket Configuration
EMAIL_TO_TICKET_DOMAIN=mycompanysupport.com
# Configure SendGrid Inbound Parse to forward emails to:
# https://your-api-domain.com/webhooks/email/sendgrid

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=./uploads

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004
